{
  "name": "sy-vue-ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C play dev",
    "build": "pnpm run -C internal/build start",
    "build:theme": "pnpm run -C packages/theme-chalk build",
    "publish:bundler": "pnpm run -C packages/sy-vue-ui release",
    "docs": "pnpm run -C site docs:dev",
    "docs:build": "pnpm run -C site docs:build",
    "clean": "pnpm run clean:dist && pnpm run clean:bundler && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "clean:bundler": "rimraf packages/sy-vue-ui/es packages/sy-vue-ui/lib packages/sy-vue-ui/theme-chalk packages/sy-vue-ui/global.d.ts",
    "typecheck": "run-p typecheck:web typecheck:play typecheck:node",
    "typecheck:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
    "typecheck:play": "vue-tsc -p tsconfig.play.json --composite false --noEmit",
    "lint:script": "eslint --ext .js,.jsx,.vue,.ts,.tsx --fix --quiet ./",
    "lint:style": "stylelint  packages/theme-chalk/**/*.{html,vue,css,scss} --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sy-vue-ui/components": "workspace:^",
    "@sy-vue-ui/hooks": "workspace:^",
    "@sy-vue-ui/theme-chalk": "workspace:^",
    "@sy-vue-ui/utils": "workspace:^"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@pnpm/types": "^9.1.0",
    "@sy-vue-ui/build": "workspace:^",
    "@sy-vue-ui/build-constants": "workspace:^",
    "@sy-vue-ui/build-utils": "workspace:^",
    "@types/fs-extra": "^11.0.1",
    "@types/gulp": "^4.0.11",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.14.1",
    "fs-extra": "^11.1.1",
    "gulp": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "release-it": "^15.10.5",
    "rimraf": "^5.0.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "sass": "^1.62.1",
    "stylelint": "^15.6.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-prettier": "^3.0.0",
    "sy-vue-ui": "workspace:^",
    "ts-morph": "^18.0.0",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "unplugin-vue-macros": "^2.2.1",
